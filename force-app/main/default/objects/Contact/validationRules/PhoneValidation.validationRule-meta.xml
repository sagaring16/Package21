<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>PhoneValidation</fullName>
    <active>true</active>
    <errorConditionFormula>AND(NOT(ISBLANK(Phone) ), NOT(REGEX(Phone, &quot;^((\\+1)?\\s?\\(\\d{3}\\)\\s?\\d{3}\\-\\d{4})?$&quot;)))</errorConditionFormula>
    <errorMessage>Please enter valid Phone Number.</errorMessage>
</ValidationRule>
