<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Due_Date_Rule</fullName>
    <active>true</active>
    <description>Due date should not be Past Date. Always be a future date.</description>
    <errorConditionFormula>(ISCHANGED(DueDate__c)  &amp;&amp; (DueDate__c  &lt;  TODAY()))  || ( ISNEW()  &amp;&amp; (DueDate__c  &lt;  TODAY()) )</errorConditionFormula>
    <errorMessage>Due date should not be in the Past Date</errorMessage>
</ValidationRule>
