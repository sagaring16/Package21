<?xml version="1.0"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
	<masterLabel>Upcoming Activities Internal</masterLabel>
	<apiVersion>60.0</apiVersion>
	<isExposed>true</isExposed>
	<description>This LWC will be used generally on the home page for showing important statistics related to upcoming activities.</description>
	<targets>
		<target>lightning__AppPage</target>
		<target>lightningCommunity__Page</target>
		<target>lightningCommunity__Default</target>
	</targets>
	<targetConfigs>
        <targetConfig targets="lightning__AppPage">
            <property name="uniqueName"  label="Unique Name" type="String" default="None"/>
			<property name="title"  label="Title" type="String"/>
        </targetConfig>
        <targetConfig targets="lightningCommunity__Default">
            <property name="uniqueName"  label="Unique Name" type="String" default="None"/>
			<property name="title"  label="Title" type="String"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>