<aura:component 
    implements="flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,forceCommunity:availableForAllPageTypes" access="global">

    <aura:attribute name="pageLayoutId" type="String" access="GLOBAL" />
    <aura:attribute name="isEditModeForLayout" type="Boolean" default="false" />
    <aura:attribute name="isEditModeForGrid" type="Boolean" default="false" />
    <aura:attribute name="editingMap" type="Object" default="{}" />
    <aura:attribute name="isEditModeForApproval" type="Boolean" default="false" />
    <aura:attribute name="isEditModeForModal" type="Boolean" default="false" />
    <aura:attribute name="layoutStates" type="Object" default="{}" />
    <aura:attribute name="unsavedLayoutIds" type="List" default="[]" />
    <aura:attribute name="modalEditingMap" type="Map" default="{}" />

    <lightning:unsavedChanges 
        aura:id="unsaved" 
        onsave="{!c.handleSave}"
        ondiscard="{!c.handleDiscard}" />

    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />

    <lightning:messageChannel
        aura:id="flexLayoutMessageChannel"
        type="GNT__flexLayoutMessageChannel__c"
        onMessage="{!c.handleMessage}" />

</aura:component>